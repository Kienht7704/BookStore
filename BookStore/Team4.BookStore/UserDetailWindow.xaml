<Window x:Class="Team4.BookStore.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="UserDetailWindow" Height="400" Width="750" 
        Loaded="Window_Loaded" 
        WindowStartupLocation="CenterScreen"
        Background="#f0ffff">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Label -->
        <Label x:Name="ContentLabel" 
               Content="Thông Tin Người Dùng" 
               Grid.Row="0"
               HorizontalAlignment="Center" 
               FontSize="28" 
               FontWeight="Bold"
               Foreground="#87cefa"
               Margin="0,0,0,20"/>

        <!-- Form nhập liệu -->
        <Border Grid.Row="1" 
                BorderBrush="#87cefa" 
                BorderThickness="2" 
                CornerRadius="8" 
                Padding="30"
                Background="White"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Member ID -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Member ID:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15" 
                           FontWeight="SemiBold"
                           Foreground="#2d3748"
                           FontSize="14"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="txtMemberId" 
                         Margin="0,0,20,15" 
                         Height="32" 
                         IsReadOnly="True" 
                         Background="#f0ffff" 
                         Foreground="#2d3748" 
                         FontSize="14"
                         BorderBrush="#87cefa"
                         Padding="8,5"/>

                <!-- Full Name -->
                <TextBlock Grid.Row="0" Grid.Column="2" 
                           Text="Họ và Tên:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15" 
                           FontWeight="SemiBold"
                           Foreground="#2d3748"
                           FontSize="14"/>
                <TextBox Grid.Row="0" Grid.Column="3" 
                         x:Name="txtFullName" 
                         Margin="0,0,0,15" 
                         Height="32" 
                         Foreground="#2d3748" 
                         Background="White" 
                         FontSize="14"
                         BorderBrush="#87cefa"
                         Padding="8,5"/>

                <!-- Email -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Email:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15" 
                           FontWeight="SemiBold"
                           Foreground="#2d3748"
                           FontSize="14"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="txtEmail" 
                         Margin="0,0,20,15" 
                         Height="32" 
                         Foreground="#2d3748" 
                         Background="White" 
                         FontSize="14"
                         BorderBrush="#87cefa"
                         Padding="8,5"/>

                <!-- Password -->
                <TextBlock Grid.Row="1" Grid.Column="2" 
                           Text="Mật khẩu:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15" 
                           FontWeight="SemiBold"
                           Foreground="#2d3748"
                           FontSize="14"/>
                <TextBox Grid.Row="1" Grid.Column="3" 
                             x:Name="txtPassword" 
                             Margin="0,0,0,15" 
                             Height="32"
                             BorderBrush="#87cefa"
                             Padding="8,5"
                             FontSize="14"/>

                <!-- Role -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Vai trò:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           FontWeight="SemiBold"
                           Foreground="#2d3748"
                           FontSize="14"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          x:Name="cboRole" 
                          Margin="0,0,20,0" 
                          Height="32"
                          BorderBrush="#87cefa"
                          Background="White"
                          Foreground="#2d3748"
                          FontSize="14"
                          Padding="8,5"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,0">
            <Button x:Name="btnSave" 
                    Content="Lưu" 
                    Background="#10b981" 
                    Foreground="White" 
                    FontWeight="SemiBold" 
                    FontSize="15"
                    Width="120"
                    Height="40"
                    Margin="0,0,15,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnSave_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#10b981"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="CancelButton" 
                    Content="Hủy" 
                    Background="#ef4444" 
                    Foreground="White" 
                    FontWeight="SemiBold" 
                    FontSize="15"
                    Width="120"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#ef4444"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#dc2626"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>