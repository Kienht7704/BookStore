<Window x:Class="Team4.BookStore.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="UserDetailWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form nhập liệu -->
        <Border Grid.Row="0" BorderBrush="#3498db" BorderThickness="2" 
                CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Member ID -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Member ID:" 
                           VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="Bold"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtMemberId" 
                         Margin="0,0,20,10" Height="25" IsReadOnly="True" Background="#ecf0f1"/>

                <!-- Full Name -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Họ và Tên:" 
                           VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="Bold"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtFullName" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Email -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" 
                           VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="Bold"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtEmail" 
                         Margin="0,0,20,10" Height="25"/>

                <!-- Password -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Mật khẩu:" 
                           VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="Bold"/>
                <PasswordBox Grid.Row="1" Grid.Column="3" x:Name="txtPassword" 
                             Margin="0,0,0,10" Height="25"/>

                <!-- Role -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Vai trò:" 
                           VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="Bold"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboRole" 
                          Margin="0,0,20,10" Height="25">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="User" IsSelected="True"/>
                    <ComboBoxItem Content="Manager"/>
                </ComboBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" 
                            Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnAdd" Content="Thêm" Width="100" Height="35" 
                            Margin="5" Background="#27ae60" Foreground="White" 
                            FontWeight="Bold" Click="BtnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Cập nhật" Width="100" Height="35" 
                            Margin="5" Background="#f39c12" Foreground="White" 
                            FontWeight="Bold" Click="BtnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Xóa" Width="100" Height="35" 
                            Margin="5" Background="#e74c3c" Foreground="White" 
                            FontWeight="Bold" Click="BtnDelete_Click"/>
                    <Button x:Name="btnClear" Content="Làm mới" Width="100" Height="35" 
                            Margin="5" Background="#95a5a6" Foreground="White" 
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" BorderBrush="#3498db" BorderThickness="2" 
                CornerRadius="5" Padding="10">
            <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" 
                      IsReadOnly="True" SelectionMode="Single"
                      AlternatingRowBackground="#ecf0f1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Member ID" Binding="{Binding MemberId}" Width="100"/>
                    <DataGridTextColumn Header="Họ và Tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                    <DataGridTextColumn Header="Vai trò" Binding="{Binding Role}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
