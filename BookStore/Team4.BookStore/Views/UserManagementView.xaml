                        Background="#10b981"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="btnAdd_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnUpdate" 
                        Content="âœï¸ Cáº­p nháº­t" 
                        Height="38"
                        Width="120"
                        Margin="0,0,10,0"
                        Background="#87cefa"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="btnUpdate_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnDelete" 
                        Content="ðŸ—‘ï¸ XÃ³a" 
                        Height="38"
                        Width="100"
                        Margin="0,0,10,0"
                        Background="#ef4444"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="btnDelete_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ResetButton" 
                        Content="ðŸ”„ LÃ m má»›i" 
                        Height="38"
                        Width="120"
                        Background="#95a5a6"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </WrapPanel>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Danh sÃ¡ch ngÆ°á»i dÃ¹ng" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="#2d3748"
                           Margin="5,0,0,10"/>

                <DataGrid x:Name="dgUsers" 
                          Grid.Row="1"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          RowHeight="35"
                          AlternatingRowBackground="#f0ffff"
                          CanUserResizeRows="False">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#87cefa"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#87cefa"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="#2d3748"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#87cefa"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f0ffff"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Member ID" Width="100" Binding="{Binding MemberId}"/>
                        <DataGridTextColumn Header="Há» vÃ  TÃªn" Width="*" Binding="{Binding FullName}"/>
                        <DataGridTextColumn Header="Email" Width="*" Binding="{Binding EmailAddress}"/>
                        <DataGridTextColumn Header="Vai trÃ²" Width="120" Binding="{Binding Role.RoleName}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>