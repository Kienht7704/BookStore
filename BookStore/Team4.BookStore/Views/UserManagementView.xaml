                           Margin="0,0,15,0"/>

                <TextBox x:Name="SearchTextBox" 
                         Background="#f0ffff" 
                         Grid.Column="1"
                         Height="38"
                         Padding="12,8"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         BorderBrush="#87cefa"
                         BorderThickness="1"
                         TabIndex="0">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Button x:Name="SearchButton" 
                        Grid.Column="2"
                        Content="TÃ¬m kiáº¿m" 
                        Height="38"
                        Width="100"
                        Margin="10,0,0,0"
                        Background="#87cefa"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="SearchButton_Click"
                        TabIndex="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Tool Buttons Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="15"
                Margin="0,0,0,15">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnAdd" 
                        Content="âž• ThÃªm ngÆ°á»i dÃ¹ng" 
