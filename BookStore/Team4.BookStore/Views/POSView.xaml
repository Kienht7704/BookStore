                                   Foreground="#2c3e50" 
                                   Width="120"/>
                        <TextBlock x:Name="TotalLabel" 
                                   Text="0$" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#27ae60" 
                                   Width="150" 
                                   TextAlignment="Right"/>
                    </StackPanel>
                    <Button x:Name="PayButton" 
                            Content="ðŸ’³ THANH TOÃN" 
                            FontSize="18" 
                            Height="50" 
                            Width="270"
                            Background="#27ae60"
                            FontWeight="Bold"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="PayButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
