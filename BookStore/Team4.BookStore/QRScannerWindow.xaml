<Window x:Class="Team4.BookStore.QRScannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="QRScannerWindow" Height="450" Width="800"
        Background="Orange" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="QUÉT MÃ QR / BARCODE" 
           FontSize="40" FontWeight="Bold" 
           Foreground="Yellow" HorizontalAlignment="Center"
           Margin="0,0,0,20"/>

        <!-- Camera Display -->
        <Border Grid.Row="1" BorderBrush="Yellow" BorderThickness="3" 
                CornerRadius="10" Background="Black">
            <Grid>
                <Image x:Name="CameraImage" Stretch="Uniform"/>
                <Label x:Name="StatusLabel" Content="Nhấn 'Bắt đầu quét' để khởi động camera" 
                       FontSize="20" Foreground="Yellow" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Background="#80000000" Padding="20,10"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="StartButton" Content="Bắt đầu quét" 
                    Width="200" Height="50" Margin="10"
                    Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Dừng quét" 
                    Width="200" Height="50" Margin="10"
                    Click="StopButton_Click" IsEnabled="False"/>
            <Button x:Name="CloseButton" Content="Đóng" 
                    Width="200" Height="50" Margin="10"
                    Click="CloseButton_Click"
                    Style="{StaticResource RedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
