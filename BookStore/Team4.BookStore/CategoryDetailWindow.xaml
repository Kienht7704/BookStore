<Window x:Class="Team4.BookStore.CategoryDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="Category Detail" Height="450" Width="650" 
        Background="#ff2800" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded">
	<Grid>
		<Label x:Name="DetailTitleLabel" 
               Content="Create | Update Category" 
               HorizontalAlignment="Left" 
               Height="70" 
               Margin="30,15,0,0" 
               VerticalAlignment="Top" 
               Width="580" 
               FontWeight="Heavy" 
               FontSize="36" 
               FontStyle="Italic" 
               Foreground="Yellow"/>

		<Rectangle HorizontalAlignment="Left" 
                   Height="245" 
                   Margin="30,0,0,0" 
                   Stroke="Black" 
                   VerticalAlignment="Center" 
                   Width="580" 
                   Fill="#ffff00" 
                   RadiusX="10" 
                   RadiusY="10"/>

		<Label Content="Category ID" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="50,110,0,0" 
               VerticalAlignment="Top" 
               Width="120" 
               Foreground="#ff4500"
               FontSize="14"
               FontWeight="SemiBold"/>
		<TextBox x:Name="CategoryIdTextBox" 
                 HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="200,110,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="380" 
                 TabIndex="0"
                 FontSize="14"
                 Padding="8"
                 VerticalContentAlignment="Center"/>

		<Label Content="Genre Type" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="50,165,0,0" 
               VerticalAlignment="Top" 
               Width="120" 
               Foreground="#ff4500"
               FontSize="14"
               FontWeight="SemiBold"/>
		<TextBox x:Name="GenreTypeTextBox" 
                 HorizontalAlignment="Left" 
                 Height="40" 
                 Margin="200,165,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="380" 
                 TabIndex="1"
                 FontSize="14"
                 Padding="8"
                 VerticalContentAlignment="Center"/>

		<Label Content="Description" 
               HorizontalAlignment="Left" 
               Height="40" 
               Margin="50,220,0,0" 
               VerticalAlignment="Top" 
               Width="120" 
               Foreground="#ff4500"
               FontSize="14"
               FontWeight="SemiBold"/>
		<TextBox x:Name="DescriptionTextBox" 
                 HorizontalAlignment="Left" 
                 Height="120" 
                 Margin="200,220,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="380" 
                 TabIndex="2" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Padding="8"
                 VerticalContentAlignment="Top"/>

		<Button x:Name="SaveButton" 
                Content="Lưu" 
                HorizontalAlignment="Left" 
                Height="45" 
                Margin="160,345,0,0" 
                VerticalAlignment="Top" 
                Width="160" 
                TabIndex="3" 
                Click="SaveButton_Click"
                Background="#27ae60"
                Foreground="White"
                BorderThickness="0"
                FontSize="14"
                FontWeight="Bold"
                Cursor="Hand">
			<Button.Template>
				<ControlTemplate TargetType="Button">
					<Border Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            Padding="15,10">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Button.Template>
			<Button.Style>
				<Style TargetType="Button">
					<Style.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Opacity" Value="0.9"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>

		<Button x:Name="CloseButton" 
                Content="Hủy" 
                HorizontalAlignment="Left" 
                Height="45" 
                Margin="356,345,0,0" 
                VerticalAlignment="Top" 
                Width="160" 
                TabIndex="4" 
                Click="CloseButton_Click"
                Background="#95a5a6"
                Foreground="White"
                BorderThickness="0"
                FontSize="14"
                FontWeight="Bold"
                Cursor="Hand" RenderTransformOrigin="0.551,-0.132">
			<Button.Template>
				<ControlTemplate TargetType="Button">
					<Border Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            Padding="15,10">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Button.Template>
			<Button.Style>
				<Style TargetType="Button">
					<Style.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Opacity" Value="0.9"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>
	</Grid>
</Window>
