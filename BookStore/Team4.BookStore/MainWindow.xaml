<Window x:Class="Team4.BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="Thế Giới Sách Xứ F - ver.25-FA" Height="700" Width="1265" 
        Background="#f5f5f5" WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize" Loaded="Window_Loaded" WindowStyle="None" AllowsTransparency="True">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Margin="8,4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495e"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2c3e50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#2c3e50">
            <StackPanel>
                <!-- Logo/Brand Area -->
                <Border Background="#1a252f" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="📚 Thế Giới Sách" 
                                   Foreground="#ecf0f1" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Xứ F" 
                                   Foreground="#f39c12" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Menu Section: QUẢN LÝ -->
                <TextBlock Text="QUẢN LÝ" 
                           Foreground="#95a5a6" 
                           FontSize="11" 
                           FontWeight="Bold"
                           Margin="15,15,0,5"/>

                <Button x:Name="BookManageButton" 
                        Content="📚 Quản lý sách" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BookManageButton_Click"/>

                <Button x:Name="UserManageButton" 
                        Content="👥 Quản lý người dùng" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="UserManageButton_Click"/>

                <!-- POS Section: BÁN HÀNG -->
                <TextBlock Text="BÁN HÀNG" 
                           Foreground="#95a5a6" 
                           FontSize="11" 
                           FontWeight="Bold"
                           Margin="15,20,0,5"/>

                <Button x:Name="POSButton" 
                        Content="🛒 Mở POS" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="POSButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Header Bar -->
        <Border Grid.Row="0" Grid.Column="1" Background="White" 
                BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="PageTitleLabel"
                               Text="Quản lý sách" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#2c3e50"/>
                    
                </StackPanel>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Background="#ecf0f1" 
                            CornerRadius="20" 
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="HelloMsgLabel" 
                                       Text="Administrator" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="#2c3e50"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Grid.Column="1" Background="#f5f5f5" Padding="20">
            <ContentControl x:Name="MainContentControl"/>
        </Border>
    </Grid>
</Window>
