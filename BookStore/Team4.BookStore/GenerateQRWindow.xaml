<Window x:Class="Team4.BookStore.GenerateQRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="GenerateQRWindow" Height="550" Width="900"
        >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="TẠO MÃ QR CHO SÁCH" 
               FontSize="35" FontWeight="Bold" 
               Foreground="Orange" HorizontalAlignment="Center"/>

        <Border Grid.Row="1" Background="#ffff00" 
                BorderBrush="#ff4500" BorderThickness="3" 
                CornerRadius="10" Padding="20" Margin="0,5,0,10">
            <StackPanel>
                <Image x:Name="QRImage" Height="300" Width="300" 
                       Stretch="Uniform" />
                <TextBlock x:Name="BookInfoText" 
                          TextAlignment="Center" 
                          FontSize="18" FontWeight="Bold"
                          Foreground="#ff4500" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,21,0,-11">
            <Button Content="💾 Lưu QR Code" Width="200" Height="50" 
                    Margin="10" Click="SaveButton_Click"/>
            <Button Content="🖨️ In QR Code" Width="200" Height="50" 
                    Margin="10" Click="PrintButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
