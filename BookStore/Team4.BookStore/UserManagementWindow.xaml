<Window x:Class="Team4.BookStore.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="UserManagementWindow" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Title -->
        <Label Content="Quản lý người dùng" HorizontalAlignment="Center" Height="64" Margin="0,24,0,0" VerticalAlignment="Top" Width="370" FontSize="25"/>
        
        <!-- Search Controls -->
        <Button x:Name="SearchButton" Content="Tìm kiếm" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="100" Height="35" Margin="10,93,0,0"
            Background="#c0c0c0" Foreground="White" 
            FontWeight="Bold" Click="SearchButton_Click" />
        
        <TextBox x:Name="SearchTextBox" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="254" Height="35" Margin="120,93,0,0" 
            TextWrapping="Wrap" TabIndex="0" 
            Background="Transparent" Foreground="Black"/>
        
        <Button x:Name="ResetButton" Content="Làm mới" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="90" Height="35" Margin="390,93,0,0"
            Background="#c0c0c0" Foreground="White" 
            FontWeight="Bold" Click="ResetButton_Click" />

        <!-- Action Buttons -->
        <Button x:Name="btnAdd" Content="Thêm" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="80" Height="35" Margin="492,93,0,0"
            Background="#27ae60" Foreground="White" 
            FontWeight="Bold" Click="btnAdd_Click" />
        
        <Button x:Name="btnUpdate" Content="Cập nhật" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="80" Height="35" Margin="581,93,0,0"
            Background="#f39c12" Foreground="White" 
            FontWeight="Bold" Click="btnUpdate_Click" />
        
        <Button x:Name="btnDelete" Content="Xóa" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Width="80" Height="35" Margin="672,93,0,0"
            Background="#e74c3c" Foreground="White" 
            FontWeight="Bold" Click="btnDelete_Click" />

        <!-- DataGrid -->
        <Border BorderBrush="#3498db" BorderThickness="2" 
            CornerRadius="5" Padding="10" Margin="10,158,10,10">
            <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single"
                  AlternatingRowBackground="#ecf0f1" Margin="0,34,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Member ID" Binding="{Binding MemberId}" Width="100"/>
                    <DataGridTextColumn Header="Họ và Tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                    <DataGridTextColumn Header="Vai trò" Binding="{Binding Role.RoleName}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
