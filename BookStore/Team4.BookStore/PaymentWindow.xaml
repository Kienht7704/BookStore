<Window x:Class="Team4.BookStore.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Payment" Height="650" Width="550" 
        Background="#1a1a2e" WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Border CornerRadius="15" Background="#16213e" BorderBrush="#0f3460" BorderThickness="2">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ðŸ’³ Payment" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Select payment method" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Total Amount -->
            <Border Grid.Row="1" Background="#1a1a2e" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Total Amount" FontSize="16" Foreground="#888" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalAmountLabel" Text="$0.00" FontSize="42" FontWeight="Bold" Foreground="#4ecca3" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Payment Methods -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <RadioButton x:Name="CashRadio" GroupName="PaymentMethod" IsChecked="True" Margin="0,0,0,10">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border" Background="#1a1a2e" CornerRadius="10" Padding="20" Cursor="Hand"
                                    BorderBrush="#333" BorderThickness="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’µ" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Cash Payment" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="Pay with cash" FontSize="12" Foreground="#888"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#4ecca3"/>
                                    <Setter TargetName="border" Property="Background" Value="#1a3a2e"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1f2937"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>

                <RadioButton x:Name="QRRadio" GroupName="PaymentMethod">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border" Background="#1a1a2e" CornerRadius="10" Padding="20" Cursor="Hand"
                                    BorderBrush="#333" BorderThickness="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“±" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="QR Code Payment" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="Scan QR to pay (simulated)" FontSize="12" Foreground="#888"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#4ecca3"/>
                                    <Setter TargetName="border" Property="Background" Value="#1a3a2e"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1f2937"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
            </StackPanel>

            <!-- QR Code Display (shown when QR selected) -->
            <Border x:Name="QRCodePanel" Grid.Row="3" Visibility="Collapsed" 
                    Background="#1a1a2e" CornerRadius="10" Padding="20" Margin="0,0,0,10">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="150" Height="150" Background="White" CornerRadius="10" Margin="0,0,0,10">
                        <TextBlock Text="[QR CODE]" FontSize="16" Foreground="#333" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Scan to pay (simulated)" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelButton" Grid.Column="0" Content="Cancel" 
                        Background="#e94560" Foreground="White" FontSize="16" FontWeight="Bold"
                        Height="50" Margin="0,0,5,0" Cursor="Hand" Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#ff6b6b"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="ConfirmButton" Grid.Column="1" Content="âœ“ Confirm Payment" 
                        Background="#4ecca3" Foreground="#1a1a2e" FontSize="16" FontWeight="Bold"
                        Height="50" Margin="5,0,0,0" Cursor="Hand" Click="ConfirmButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#6ee7b7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
