<Window x:Class="Team4.BookStore.POSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Point of Sale - Checkout" Height="700" Width="1100" 
        Background="#1a1a2e" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="POSTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- POS Button Style -->
        <Style x:Key="POSButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ff6b6b"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryPOSButton" TargetType="Button">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a4a7a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ›’ Point of Sale" FontSize="32" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="StaffLabel" Text="Staff: Admin" FontSize="14" Foreground="#888"/>
        </StackPanel>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="BookIdTextBox" Grid.Column="0" 
                     Background="#16213e" Foreground="White" CaretBrush="White"
                     FontSize="18" Padding="15,10" 
                     BorderBrush="#0f3460" BorderThickness="2"
                     VerticalContentAlignment="Center"
                     ToolTip="Enter Book ID and press Enter or click Add"
                     KeyDown="BookIdTextBox_KeyDown"/>

            <Button x:Name="AddButton" Grid.Column="1" Content="âž• Add" 
                    Style="{StaticResource POSButton}" Margin="10,0,0,0"
                    Click="AddButton_Click"/>
            
            <Button x:Name="SearchButton" Grid.Column="2" Content="ðŸ” Search" 
                    Style="{StaticResource SecondaryPOSButton}" Margin="10,0,0,0"
                    Click="SearchButton_Click"/>
        </Grid>

        <!-- Order Items Grid -->
        <Border Grid.Row="2" Background="#16213e" CornerRadius="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Current Order" FontSize="18" FontWeight="SemiBold" 
                           Foreground="White" Margin="10,5,0,10"/>

                <DataGrid x:Name="OrderDataGrid" Grid.Row="1" 
                          AutoGenerateColumns="False" 
                          Background="Transparent"
                          RowBackground="#1a1a2e"
                          AlternatingRowBackground="#16213e"
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#333"
                          BorderThickness="0"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          FontSize="14">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0f3460"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,8"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="60" Binding="{Binding Book.BookId}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Book Name" Width="*" Binding="{Binding Book.BookName}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Price" Width="100" Binding="{Binding UnitPrice, StringFormat=\{0:C\}}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Qty" Width="80" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="Subtotal" Width="120" Binding="{Binding Subtotal, StringFormat=\{0:C\}}" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Action" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ðŸ—‘ï¸" Background="Transparent" Foreground="#e94560" 
                                            BorderThickness="0" FontSize="18" Cursor="Hand"
                                            Click="RemoveItem_Click" Tag="{Binding Book.BookId}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer - Totals and Actions -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Action Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="ClearButton" Content="ðŸ—‘ï¸ Clear Order" 
                        Style="{StaticResource SecondaryPOSButton}"
                        Click="ClearButton_Click"/>
                <Button x:Name="CloseButton" Content="âœ• Close" 
                        Style="{StaticResource SecondaryPOSButton}" Margin="10,0,0,0"
                        Click="CloseButton_Click"/>
            </StackPanel>

            <!-- Right Side - Totals -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Subtotal:" FontSize="16" Foreground="#888" Width="100"/>
                    <TextBlock x:Name="SubtotalLabel" Text="$0.00" FontSize="16" Foreground="White" Width="120" TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="TOTAL:" FontSize="24" FontWeight="Bold" Foreground="White" Width="100"/>
                    <TextBlock x:Name="TotalLabel" Text="$0.00" FontSize="24" FontWeight="Bold" Foreground="#4ecca3" Width="120" TextAlignment="Right"/>
                </StackPanel>
                <Button x:Name="PayButton" Content="ðŸ’³ PAY" FontSize="20" Height="60" Width="220"
                        Style="{StaticResource POSButton}" Background="#4ecca3"
                        Click="PayButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
