<Window x:Class="Team4.BookStore.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Team4.BookStore"
        mc:Ignorable="d"
        Title="Book Detail" Height="700" Width="1000" Background="#87cefa" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <!-- Title -->
        <Label x:Name="DetailTitleLable" Content="Create | Update Book" HorizontalAlignment="Center" Height="70" Margin="0,20,0,0" VerticalAlignment="Top" Width="900" FontWeight="Bold" FontSize="36" Foreground="White" HorizontalContentAlignment="Center"/>

        <!-- Main Content Area -->
        <Border Margin="30,110,30,30" Background="White" CornerRadius="15" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Form Fields -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Book ID -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <Label Content="Book ID" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                        <TextBox x:Name="BookIdTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="0">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Book Name -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <Label Content="Book Name" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                        <TextBox x:Name="BookNameTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="1">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Author -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <Label Content="Author" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                        <TextBox x:Name="AuthorTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="2">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Category -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <Label Content="Category" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                        <ComboBox x:Name="CategoryIdComboBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="3">
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>
                    </StackPanel>

                    <!-- Price and Quantity -->
                    <Grid Grid.Row="4" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Price -->
                        <StackPanel Grid.Column="0">
                            <Label Content="Price (VNĐ)" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                            <TextBox x:Name="PriceTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="4">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Quantity -->
                        <StackPanel Grid.Column="2">
                            <Label Content="Quantity" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                            <TextBox x:Name="QuantityTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="5">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Grid>

                    <!-- Publication Date and Description -->
                    <Grid Grid.Row="5" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Publication Date -->
                        <StackPanel Grid.Column="0">
                            <Label Content="Publication Date (dd/MM/yyyy)" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                            <TextBox x:Name="PublicationDateTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="6">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Grid.Column="2">
                            <Label Content="Description" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                            <TextBox x:Name="DescriptionTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top" TabIndex="7">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Right Column - Image Section -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Image URL -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <Label Content="Image URL" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,5"/>
                        <TextBox x:Name="ImageUrlTextBox" Height="40" Padding="12,8" FontSize="13" BorderBrush="#87cefa" BorderThickness="2" TabIndex="8" TextChanged="ImageUrlTextBox_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Browse Button -->
                    <Button x:Name="BrowseImageButton" Grid.Row="1" Content="📁 Browse Image" Height="35" Margin="0,0,0,15" Click="BrowseImageButton_Click" Background="#87cefa" Foreground="White" FontWeight="SemiBold" FontSize="13" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Image Preview Label -->
                    <Label Grid.Row="2" Content="Preview" Foreground="#2d3748" FontWeight="SemiBold" FontSize="14" Padding="0,0,0,8" HorizontalAlignment="Center"/>

                    <!-- Image Preview -->
                    <Border Grid.Row="3" BorderBrush="#87cefa" BorderThickness="2" Background="#f0ffff" CornerRadius="8" Margin="0,0,0,15">
                        <Image x:Name="BookCoverImage" Stretch="Uniform" Margin="10"/>
                    </Border>

                    <!-- Save Button -->
                    <Button x:Name="SaveButton" Grid.Row="4" Content="💾 Save Book" Height="45" Margin="0,0,0,10" TabIndex="9" Click="SaveButton_Click" Background="#10b981" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="15,10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Close Button -->
                    <Button x:Name="CloseButton" Grid.Row="5" Content="✖ Close" Height="45" TabIndex="10" Background="#95a5a6" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="15,10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>